# PyMon Configuration

# Server
HOST=0.0.0.0
PORT=8000

# Storage
STORAGE_BACKEND=sqlite
DB_PATH=./pymon.db

# Authentication
JWT_SECRET=change-me-to-a-random-string-in-production
JWT_EXPIRE_HOURS=24

# Default admin credentials (change after first login!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Data retention (hours)
RETENTION_HOURS=168

# Backup
BACKUP_ENABLED=true
BACKUP_DIR=./backups
MAX_BACKUPS=10
